<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="5px"
        android:src="@drawable/blau" >
    </ImageView>

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text1"
        style="@+style/TextList"
        android:layout_toRightOf="@+id/icon" />
    
     <TextView style="@+style/TextList"
        android:id="@+id/text2" 
        android:text="(" 
        android:layout_toRightOf="@+id/text1" />
     
    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/textQuantitat"
        style="@+style/TextListWithoutSpace" 
        android:layout_toRightOf="@+id/text2" />
    
    <TextView style="@+style/TextListWithoutSpace"
        android:text=")" 
        android:layout_toRightOf="@+id/textQuantitat" />

</RelativeLayout>